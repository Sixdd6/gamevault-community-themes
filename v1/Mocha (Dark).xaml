<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <system:Int32 x:Key="Theme.SchemaVersion">1</system:Int32>

    <!-- Edits Begin Here -->
    <!-- A version number you can use to update your theme -->
    <system:Int32 x:Key="Theme.Version">4</system:Int32>
    <!-- Theme File Name Convention is Theme+YourThemeName+Dark/Light (e.g. ThemeOceanLight) -->
    <system:String x:Key="Theme.Name">ThemeMochaDark</system:String>
    <!-- Ideally your GitHub Username -->
    <system:String x:Key="Theme.Author">Sixdd6</system:String>
    <!-- Describe this theme -->
    <system:String x:Key="Theme.Description">A dark and chocolatey theme.</system:String>
    <!-- How the theme will be shown in UI -->
    <system:String x:Key="Theme.DisplayName">Mocha (Dark)</system:String>

    <!-- Affects most text and sidebar icons -->
    <Color x:Key="GameVault.Colors.Foreground">#FFFFFFFF</Color>
    <!-- Affects text on buttons and library headers -->
    <Color x:Key="GameVault.Colors.Foreground2">#FFFFFFFF</Color>
    
    <!-- Main background color for settings page and back of library view -->
    <Color x:Key="GameVault.Colors.Background">#FF392809</Color>
    <!-- Background color of library shelf and sidebar/topbar -->
    <Color x:Key="GameVault.Colors.Background2">#FF392809</Color>
    
    <!-- Accent Color, affects some text and most buttons -->
    <Color x:Key="GameVault.Colors.Accent">#FFAE9E81</Color>
    <!-- Accent Color with 60% Opacity -->
    <Color x:Key="GameVault.Colors.Accent2">#99AE9E81</Color>
    <!-- Accent Color with 40% Opacity -->
    <Color x:Key="GameVault.Colors.Accent3">#66AE9E81</Color>
    <!-- Accent Color with 20% Opacity -->
    <Color x:Key="GameVault.Colors.Accent4">#33AE9E81</Color>
    
    <!-- Affects borders of text input fields and dropdowns -->
    <Color x:Key="GameVault.Colors.Border">#FFE4D1AF</Color>
    
    <!-- Affects the overlay on boxart and the coloration of game details backdrop -->
    <Color x:Key="GameVault.Colors.Blur">#FF000000</Color>
</ResourceDictionary>